{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "es2020",
    "target": "es2020",
    "jsx": "react",
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "exclude": ["spec", "./**/node_modules", "./node_modules"]
}
